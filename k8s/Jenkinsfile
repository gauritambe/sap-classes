pipeline {
    agent any
    
    environment {
        PATH = "${env.HOME}/bin:${env.PATH}"
    }
    
    tools {
        jdk 'jdk'
        nodejs 'nodejs25'
    }
    
    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        
        stage('Checkout from Git') {
            steps {
                git branch: 'dev', 
                    credentialsId: 'github-sap-classes', 
                    url: 'https://github.com/gauritambe/sap-classes.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Install Tools') {
            steps {
                script {
                    sh '''
                        # Install Trivy to user directory
                        mkdir -p ~/bin
                        if ! ~/bin/trivy version >/dev/null 2>&1; then
                            curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh -s -- -b ~/bin v0.68.2
                        fi
                        ~/bin/trivy --version
                                               
                    '''
                }
            }
        }
        
        
        stage('TRIVY FS SCAN') {
            steps {
                sh "~/bin/trivy fs --severity HIGH,CRITICAL --exit-code 0 --no-progress . > trivyfs.txt"
            }
            post {
                always {
                    archiveArtifacts 'trivyfs.txt'
                }
            }
        }
        
        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                        sh "docker build -t sap-frontend ."
                        sh "docker tag sap-frontend gauriiitambe/sap-frontend:latest"
                        sh "docker push gauriiitambe/sap-frontend:latest"
                    }
                }
            }
        }
        
        stage('TRIVY Image SCAN') {
            steps {
                sh "~/bin/trivy image --severity HIGH,CRITICAL --exit-code 0 --no-progress gauriiitambe/sap-frontend:\${DATE} > trivyimage.txt"
            }
            post {
                always {
                    archiveArtifacts 'trivyimage.txt'
                }
            }
        }
        
        stage('Deploy to Container') {
            steps {
                sh '''
                    docker stop frontend || true
                    docker rm frontend || true
                    docker run -d --name frontend -p 80:80 gauriiitambe/sap-frontend:latest
                    sleep 5
                    curl -f http://localhost:80 || echo "App deployed - manual check required"
                '''
            }
        }
        
        stage('Deploy to Minikube') {
            when {
                anyOf {
                    environment name: 'MINIKUBE_ENABLED', value: 'true'
                    expression { fileExists('k8s/namespace.yml') }
                }
            }
            steps {
                script {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        sh '''
                            # Deploy to Kubernetes
                            kubectl apply -f ./k8s/namespace.yml || kubectl create -f ./k8s/namespace.yml
                            kubectl apply -f ./k8s/deployment.yml
                            kubectl apply -f ./k8s/service.yml
                            
                            # Wait for deployment
                            kubectl rollout status deployment/sap-classes -n sap-classes --timeout=300s
                            
                            # Port forward in background
                            kubectl port-forward service/sap-classes -n sap-classes 8080:80 &
                            echo $! > port_forward.pid
                            sleep 5
                            curl -f http://localhost:8080 || echo "Minikube deployment complete"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Cleanup old containers
                sh '''
                    docker stop frontend || true
                    docker rm frontend || true
                '''
                
                // Archive all reports
                archiveArtifacts artifacts: '*.txt, **/dependency-check-report.xml', allowEmptyArchive: true
                
                // Publish test results if available
                publishTestResults testResultsPattern: '**/test-results.xml', 
                testResultsPattern: '**/test-results.xml', 
                allowEmptyResults: true
            }
        }
        success {
            echo "ğŸ‰ Pipeline completed successfully!"
            echo "ğŸŒ Frontend: http://192.168.251.30"
            echo "ğŸ“¦ Docker Image: gauriiitambe/sap-frontend:${DATE}"
        }
        failure {
            echo "âŒ Pipeline failed. Check archived reports."
        }
    }
}
