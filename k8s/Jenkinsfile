pipeline {
    agent any
    
    tools {
        nodejs 'nodejs25'
    }
    
    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
        
        stage('Checkout from Git') {
            steps {
                git branch: 'dev', 
                    credentialsId: 'github-sap-classes', 
                    url: 'https://github.com/gauritambe/sap-classes.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        
        stage('TRIVY FS SCAN') {
            steps {
                sh "/usr/bin/trivy fs --severity HIGH,CRITICAL --exit-code 0 --no-progress . > trivyfs.txt"
            }
            post {
                always {
			archiveArtifacts 'trivyfs.txt'
		}
            }
        }
        
        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                        sh "docker build -t sap-frontend ."
                        sh "docker tag sap-frontend gauriiitambe/sap-frontend:latest"
                        sh "docker push gauriiitambe/sap-frontend:latest"
                    }
                }
            }
        }
        
        stage('TRIVY Image SCAN') {
            steps {
                sh "/usr/bin/trivy image --severity HIGH,CRITICAL --exit-code 0 --no-progress gauriiitambe/sap-frontend:latest > trivyimage.txt"
            }
            post {
                always {
                    archiveArtifacts 'trivyimage.txt'
                }
            }
        }
        
        stage('Deploy to Minikube') {
            when {
                anyOf {
                    environment name: 'MINIKUBE_ENABLED', value: 'true'
                    expression { fileExists('k8s/namespace.yml') }
                }
            }
            steps {
                script {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        sh '''
                            #enable addons
			    minikube addons enable ingress

			    # Deploy to Kubernetes
                            kubectl apply -f ./k8s/namespace.yml || kubectl create -f ./k8s/namespace.yml
                            kubectl apply -f ./k8s/deployment.yml
                            kubectl apply -f ./k8s/service.yml
                            kubectl apply -f ./k8s/ingress.yml
                            
                            # Wait for deployment
                            kubectl rollout status deployment/sap-classes -n sap-classes --timeout=300s
                            
                            curl -f http://sap-classes || echo "Minikube deployment complete"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo "üéâ Pipeline completed successfully!"
            echo "üåê Frontend: http://localhost:8000"
            echo "üì¶ Docker Image: gauriiitambe/sap-frontend:latest"
        }
        failure {
            echo "‚ùå Pipeline failed. Check archived reports."
        }
    }
}
